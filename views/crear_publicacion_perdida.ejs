<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<%- include ('header', {tituloweb: '¡Oh my dog! | Formulario publicacion perdida ' }); %>

    <body id="body">

        <div class="container h-50 mt-4">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-lg-12 col-xl-8">
                    <div class="card text-black mb-3" style="border-radius: 25px;">
                        <div class="card-body p-md-4">
                            <div class="row justify-content-center">
                                <p class="text-center h1 fw-bold mb-4 mx-1 mx-md-4 mt-3">Crear publicacion perro perdido</p>
                                <div class="col-md-6"> <!-- Columna del formulario -->
                                    <form method="POST" action="/campanias/publicarCampania">
                                        <div class="row mb-3 h-100">
                                            <div class="mb-3">
                                                <label for="titulo" class="b"> Título de la Campaña (*) </label>
                                                <input class="form-control form-control-user" name="titulo" type="text"
                                                    placeholder="Ingrese título de la campaña" maxlength="256" required >
                                            </div>
                                            <div class="mb-3">
                                                <label for="titulo" class="b"> Descripción de la Campaña (*) </label>
                                                <textarea class="form-control form-control-user" name="descripcion"
                                                    placeholder="Ingrese descripción de la campaña" maxlength="500" required ></textarea>
                                            </div>
                                            <div class="mb-3" id="div_fecha">
                                                <label for="fecha_fin" class="b"> Fecha de fin (*) </label>
                                                <% let fechaMinima=new Date(); fechaMinima.setDate(fechaMinima.getDate()
                                                    + 1); fechaMinima=fechaMinima.toISOString().split("T")[0]; let
                                                    fechaMaxima=new Date();
                                                    fechaMaxima.setFullYear(fechaMaxima.getFullYear() + 5);
                                                    fechaMaxima=fechaMaxima.toISOString().split("T")[0]; %>
                                                    <input class="form-control form-control-user" type="date"
                                                        name="fecha_fin" min="<%= fechaMinima %>"
                                                        max="<%= fechaMaxima %>" required>
                                            </div>
                                            <div class="mb-3">
                                                <button class="btn btn-primary d-block btn-user w-100" type="submit"
                                                    id="enviar_turno">Publicar</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-6 d-flex align-items-center order-1 order-lg-2 justify-content-center">
                                    <img src="/img/perrito_campania.png" alt="Foto perrito" class="img-fluid"
                                        width="300px">
                                </div>
                                <style>
                                    @media only screen and (max-width: 1000px) {
                                      img {
                                        display: none;
                                      }
                              
                                      div {
                                        display: block;
                                      }
                                    }
                                  </style>
                            </div>
                            <hr>
                            <div class="text-center mb-2" style="font-size: smaller;">Los campos con (*) son
                                obligatorios</div>
                            <div class="text-center"><a class="small" href="/campanias">Volver</a></div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
        </script>

    </body>
    <%- include ('sweet-alert') %>
    </html>