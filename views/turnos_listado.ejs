<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
<%- include ('header') %>
    </head>
    <!-- BODY -->

    <body id="body">
        <br>
        <div class="container-sm" style="max-width: 1200px;">
            <div class="card text-black" style="border-radius: 10px;">
                <table class="table" id="tabla1">
                    <thead class="table-secondary">
                        <tr>
                            <th class="text-center" scope="col">Fecha</th>
                            <th class="text-center" scope="col">Cliente</th>
                            <th class="text-center" scope="col">Mail</th>
                            <th class="text-center" scope="col">Banda Horaria</th>
                            <th class="text-center" scope="col">Practica</th>
                            <th class="text-center" scope="col">Mascota</th>
                            <th class="text-center" scope="col">Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (!data.length==0) { let celdaEstado=0; %>
                            <% data.forEach(turno=> {
                                const fechaCorta = turno.fecha.toLocaleDateString("es-ES", {day: "2-digit",
                                month:"2-digit", year: "numeric"});
                                const estado = turno.estado.toLowerCase();
                                const cellClass = estado === "aceptado" ? "alert-success" : estado === "rechazado" ?
                                "alert-danger" : "";
                                %>
                                <tr class="paginate">
                                    <td class="max-width-100 text-center align-middle">
                                        <%= fechaCorta %>
                                    </td>
                                    <td class="text-center align-middle">
                                        <%= turno.user %>
                                    </td>
                                    <td class="text-center align-middle">
                                        <%= turno.mailUser %>
                                    </td>
                                    <td class="text-center align-middle">
                                        <%= turno.banda_horaria %>
                                    </td>
                                    <td class="text-center align-middle">
                                        <%= turno.practica %>
                                    </td>
                                    <td class="text-center align-middle">
                                        <%= turno.nombre %>
                                    </td>
                                    <td class="text-center align-middle" id="estado<%= celdaEstado %>">
                                        <% if (estado==="pendiente" ) { const idTurno=turno.id; %>
                                            <div>
                                                <button type="button"
                                                    onclick="confirmarTurno(true,'<%= idTurno%>','<%= celdaEstado %>')"
                                                    class="btn btn-outline-success">Aceptar</button>
                                                <button type="button"
                                                    onclick="confirmarTurno(false,'<%= idTurno%>','<%= celdaEstado %>')"
                                                    class="btn btn-outline-danger">Rechazar</button>
                                            </div>
                                            <% } else { %>
                                                <div class="alert <%= cellClass %> m-0">
                                                    <%= turno.estado %>
                                                </div>
                                                <% } %>
                                    </td>
                                </tr>
                                <% celdaEstado++; }); %>
                                    <% } %>
                    </tbody>
                </table>
                </tbody>
                </table>
                <div class="text-center">
                    <a href="/">Volver</a>
                </div>
            </div>
        </div>
        <style>
            .dataTables_empty {
                text-align: center;
                color: #9e1f1f;
                font-style: italic;
            }
        </style>
        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
        <script>
            $(document).ready(function () {
                const tableRows = $('#tabla1 tbody tr').length;
                const pagingEnable = tableRows > 50;
                $('#tabla1').DataTable({
                    paging: pagingEnable,
                    ordering: false,
                    info: false,
                    lengthMenu: [
                        [5, 15, 50, -1],
                        [5, 15, 50, 'Todos'],
                    ],
                    pageLength: 50, // Establecer como la opción por defecto
                    searching: false, // deshabilita la función de búsqueda
                    language: {
                        paginate: { previous: 'Anterior', next: 'Siguiente', },
                        zeroRecords: 'No hay turnos solicitados',
                        info: 'Mostrando pagina _PAGE_ de _PAGES_',
                        infoEmpty: 'No hay turnos solicitados',
                        lengthMenu: 'Mostrar _MENU_ entradas'
                    },
                });

            });

            function confirmarTurno(estado, idTurno, celdaEstado) {
                const data = { estado: estado, idTurno: idTurno };
                fetch('/turnos/listarTodosLosTurnos', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                    .then(response => {
                        if (response.ok) {
                            if (estado) {
                                document.getElementById("estado" + celdaEstado).innerHTML = '<div class="alert alert-success m-0">Aceptado</div>';
                            } else {
                                document.getElementById("estado" + celdaEstado).innerHTML = '<div class="alert alert-danger m-0">Rechazado</div>';
                            }
                        }
                        return (response.json());
                    })
                    .then(data => {
                        console.log(data);
                    })
                    .catch(error => {
                        console.error(error);
                    });
            }
        </script>
    </body>

    </html>