<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
<%- include ('header') %>
    </head>
    <!-- BODY -->

    <body id="body">
        <br>
        <div class="container-sm" style="max-width: 1200px;">
            <div class="card text-black" style="border-radius: 10px;">
                <table class="table" id="tabla1">
                    <thead class="">
                        <tr>
                            <th scope="col">Fecha</th>
                            <th scope="col">Cliente</th>
                            <th scope="col">Banda Horaria</th>
                            <th scope="col">Practica</th>
                            <th scope="col">Mascota</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (!data.length===0) { %>
                            <% data.forEach(turno=> {
                                const fechaCorta = turno.fecha.toLocaleDateString("es-ES", { year: "2-digit", month:
                                "2-digit", day: "2-digit" });
                                %>
                                <tr class="paginate">
                                    <td class="max-width-100">
                                        <%= fechaCorta %>
                                    </td>
                                    <td>
                                        <%= turno.User.nombre %>
                                    </td>
                                    <td>
                                        <%= turno.banda_horaria %>
                                    </td>
                                    <td>
                                        <%= turno.practica %>
                                    </td>
                                    <td>
                                        <%= turno.Mascota.nombre %>
                                    </td>
                                    <td><button type="button" class="btn btn-outline-primary"><i
                                                class="bi bi-eye-fill">Ver</i></button>
                                    </td>
                                </tr>
                                <% }); %>
                    </tbody>
                </table>
                <% } %>
                    </tbody>
                    </table>
                    <div class="text-center">
                        <a href="/">Volver</a>
                    </div>
            </div>
        </div>
        <style>
            .dataTables_empty {
                text-align: center;
                color: #9e1f1f;
                font-style: italic;
            }
            
        </style>
        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#tabla1').DataTable({
                    paging: true,
                    ordering: false,
                    info: false,
                    lengthMenu: [
                        [5, 15, 50, -1],
                        [5, 15, 50, 'Todos'],
                    ],
                    pageLength: 50, // Establecer como la opción por defecto
                    searching: false, // deshabilita la función de búsqueda
                    language: {
                        paginate: { previous: 'Anterior', next: 'Siguiente', },
                        zeroRecords: 'No hay turnos solicitados',
                        info: 'Mostrando pagina _PAGE_ de _PAGES_',
                        infoEmpty: 'No hay turnos solicitados',
                        lengthMenu: 'Mostrar _MENU_ entradas'
                    },
                });
            });
        </script>
    </body>

    </html>