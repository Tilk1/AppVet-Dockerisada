  <body id="body">
    <br>
    <div class="container-sm" style="max-width: 1200px;">
      <div class="card text-black" style="border-radius: 10px;">
  <table class="table" id="example">
      <thead>
        <tr>
          <th scope="col">Correo</th>
          <th scope="col">Nombre completo</th>
          <th scope="col">tel</th>
          <th scope="col">DNI</th>
          <!-- <th scope="col">pass</th> -->
          <th scope="col">Rol</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
          <% data.forEach(usuario => { %>
        <tr class="paginate">
          <td><%= usuario.mail %></td>
          <td><%= usuario.name %></td>
          <td><%= usuario.tel %></td>
            <td><%= usuario.DNI %></td>
          <!--<td><%= usuario.pass %></td>-->
            <td><%= usuario.rol %></td>
            <td><button type="button" class="btn btn-outline-primary"><i class="bi bi-eye-fill">Ver</i></button>
              <button type="button" onclick="location.href='<%= `/agregar_mascota/cliente/${usuario.id}` %>'" class="btn btn-outline-info"><i class="bi bi-plus-lg me-2"></i>Agregar Mascota</button>
              <!-- <a href="`/contactar/trabajador/${trabajador.id}`" class="btn btn-primary">Contactar</a> -->
              <!-- <button type="button" class="btn btn-outline-danger"><i class="bi bi-x"></i>Eliminar</button> -->
            </td>
            
          </tr>
          <% }); %>
        </tbody>
      </table>
          <div class="text-center">
            <a href="/">Volver</a>
          </div>
  </div>
  </div>


