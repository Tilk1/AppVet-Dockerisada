<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1">
<%- include ('header', {tituloweb: '¡Oh my dog! | Campañas' });%>
  </head>

  <body id="body">
    <div class="row m-4 justify-content-center align-items-center">
      <% if (session.loggedin && session.usuario && session.usuario.rol=="admin" ){ %>
        <div class="row row-cols-1 m-3 justify-content-center align-items-center">
          <button type="button" class="btn btn-primary col-3"><i class="bi bi-chat-square-text"></i> Publicar
            Campaña</button>
        </div>
        <% } %>
          <% if (!data.length==0) { let btn_n=0; let campVet=data[0]; %>
            <div class="row row-cols-1 m-2 justify-content-center align-items-center">
              <div class="col">
                <div class="card text-center">
                  <div class="card-header">
                    <h5 class="card-title p-2">
                      <%= campVet.titulo %>
                    </h5>
                  </div>
                  <div class="card-body m-1 d-flex flex-column justify-content-center">
                    <p class="card-text text-justify">
                      <%= campVet.descripcion %>
                    </p>
                  </div>
                  <div class="m-1">
                    <% if (session.loggedin){ %>
                      <button id="vetCamp" type="button" class="btn btn-outline-primary"><i
                          class="bi bi-cash-stack"></i>
                        Donar</button>
                      <% } else { %>
                        <button id="vetCamp" type="button" class="btn btn-outline-primary" disabled><i
                            class="bi bi-cash-stack"></i>
                          Donar</button>
                        <% } %>
                          <% if (session.loggedin && session.usuario && session.usuario.rol=="admin" ) { %>
                            <button type="button" class="btn btn-outline-success"><i class="bi bi-eye"></i>
                              Donaciones</button>
                            <% } %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row row-cols-1 m-2 row-cols-md-2 row-cols-lg-3 g-4">
              <% data.slice(1).forEach(campania=> { %>
                <div class="col">
                  <div class="card text-center h-100">
                    <div class="card-header">
                      <h5 class="card-title p-2">
                        <%= campania.titulo %>
                      </h5>
                    </div>
                    <div class="card-body m-1 d-flex flex-column justify-content-center">
                      <p class="card-text text-justify">
                        <%= campania.descripcion %>
                      </p>
                    </div>
                    <div class="m-1">
                      <% if (session.loggedin && new Date(campania.fecha_fin) >= new Date()){ %>
                        <button id="boton<%=btn_n%>" type="button" class="btn btn-outline-primary"><i
                            class="bi bi-cash-stack"></i>
                          Donar</button>
                        <% } else { %>
                          <button id="boton<%=btn_n%>" type="button" class="btn btn-outline-primary" disabled><i
                              class="bi bi-cash-stack"></i>
                            Donar</button>
                          <% } %>
                            <% if (session.loggedin && session.usuario && session.usuario.rol=="admin" ) { %>
                              <button type="button" class="btn btn-outline-success"><i class="bi bi-eye"></i>
                                Donaciones</button>
                              <% } %>
                    </div>
                    <div class="card-footer text-body-secondary">
                      <%= campania.fecha_fin %>
                    </div>
                  </div>
                </div>
                <% if((data.indexOf(campania)) % 3==0) { %>
                  <div class="w-100"></div> <!-- Add a new row after every three cards -->
                  <% } %>
                    <% btn_n++; }); %>
            </div>
            <% } else { %>
              <div class="col-lg-10 col-xl-10">
                <div class="alert alert-primary text-center" role="alert">
                  <i class="bi bi-exclamation-circle-fill"></i>
                  No hay campañas cargadas
                </div>
              </div>
              <% } %>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"></script>
  </body>

  </html>